<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_title_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_title_text_view"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_title_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_scroll"
        android:layout_marginTop="@dimen/scroll_margin_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txt_title_scroll_view">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paragraf"
            android:textSize="@dimen/text_scroll_size" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>